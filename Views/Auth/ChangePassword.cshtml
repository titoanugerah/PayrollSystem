                            <label>KTP</label>
                            <input class="form-control" type="text" id="KTP" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-info" onclick="updatePassword()">Simpan</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

