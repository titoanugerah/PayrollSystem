<div class="panel-header bg-primary-gradient">
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">Kelola Lokasi</h2>
            </div>
            <div class="ml-md-auto py-2 py-md-0">
                <button type="button" onclick="showAddLocationForm()" class="btn btn-white btn-border btn-round mr-2">Tambah Lokasi</button>
                <button type="button" onclick="reloadTable()" class="btn btn-white btn-border btn-round mr-2">Reload Data</button>
                <a href="#" class="btn btn-white btn-border btn-round mr-2" hidden>Manage</a>
            </div>
        </div>
    </div>
</div>

<div class="page-inner mt--5">
    <div class="row mt--2">
        <div class="col-md-12">
            <div class="row">
                <div class="card full-height  col-md-12">
                    <div class="card-header">
                        <div class="card-title">Kelola Data Location</div>
                        <div class="d-flex flex-wrap justify-content-around pb-2 pt-4">
                            <table id="table" class="display">
                                <thead>
                                    <tr>
                                        <td>Location</td>
                                        <td>Keterangan</td>
                                        <td>Opsi</td>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addLocationModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h4>Tambah Location</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <ul class="wizard-menu nav nav-pills nav-primary">
                    <li class="step" style="width: 50%;">
                        <a class="nav-link active" href="#addNewTab" data-toggle="tab" aria-expanded="true"><i class="fa fa-user-plus mr-0"></i> Tambah Baru</a>
                    </li>
                    <li class="step" style="width: 50%;">
                        <a class="nav-link" href="#recoverTab" data-toggle="tab"><i class="fas fa-undo mr-2"></i> Pulihkan </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="addNewTab">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Nama Location</label>
                                    <input type="text" class="form-control" id="addName" required>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Keterangan</label>
                                    <input type="text" class="form-control" id="addRemark" required>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" onclick="addLocation()">Simpan</button>
                            <button type="button" data-dismiss="modal" class="btn btn-secondary">Kembali</button>
                        </div>
                    </div>
                    <div class="tab-pane" id="recoverTab">
                        <div class="form-group">
                            <label>Location</label>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <select class="form-control select2addmodal" id="recoverId" style="width:360px">
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" onclick="recoverLocation()">Pulihkan</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kembali</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editLocationModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h4>Edit Location</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nama Location</label>
                            <input type="text" class="form-control" id="editId" hidden>
                            <input type="text" class="form-control" id="editName" required>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Keterangan</label>
                            <input type="text" class="form-control" id="editRemark" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="updateLocation()">Simpan</button>
                    <button type="button" class="btn btn-danger" onclick="deleteLocation()">Hapus</button>
                    <button type="button" data-dismiss="modal" class="btn btn-secondary">Kembali</button>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/js/location/index.js"></script>
