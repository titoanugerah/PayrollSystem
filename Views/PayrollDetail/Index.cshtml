<div class="panel-header bg-primary-gradient">
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">Detail Penggajian Periode @ViewBag.Period</h2>
            </div>
            <div class="ml-md-auto py-2 py-md-0">
                <input type="number" id="payrollHistoryId" value="@ViewBag.Id" hidden />
                <button type="button" onclick="submit()" class="btn btn-white btn-border btn-round mr-2">Submit</button>
                <button type="button" onclick="showDownloadReportForm()" class="btn btn-white btn-border btn-round mr-2">Download</button>
                <button type="button" onclick="showAddPayrollDetailForm()" class="btn btn-white btn-border btn-round mr-2">Upload Gaji</button>
                <button type="button" onclick="reloadTable()" class="btn btn-white btn-border btn-round mr-2">Reload Data</button>
                <a href="#" class="btn btn-white btn-border btn-round mr-2" hidden>Manage</a>
            </div>
        </div>
    </div>
</div>

<div class="page-inner mt--5">
    <div class="row mt--2">
        <div class="col-md-12">
            <div class="row">
                <div class="card full-height  col-md-12">
                    <div class="card-header">
                        <div class="card-title">Detail Penggajian</div>
                        <div class="d-flex flex-wrap justify-content-around pb-2 pt-4">
                            <table id="table" class="display">
                                <thead>
                                    <tr>
                                        <td>NIK</td>
                                        <td>Nama</td>
                                        <td>Total</td>
                                        <td>Status</td>
                                        <td>Opsi</td>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addPayrollDetailModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h4>Upload Gaji</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-12">Pilih dokumen </label>
                            <input type="file" class="form-control form-control-file" id="fileUpload1" name="fileUpload1" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" required="">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="~/file/templateEmployee.xlsx" class="btn btn-success pull-left">Download Format Excel</a>
                    <button type="button" class="btn btn-primary" onclick="updatePayrollDetail()">Simpan</button>
                    <button type="button" data-dismiss="modal" class="btn btn-secondary">Kembali</button>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="payrollDetailModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h4>Rincian Gaji</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nama</label>
                            <input type="text" class="form-control" id="name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>NIK</label>
                            <input type="text" class="form-control" id="nik">
                        </div>
                    </div>
                    <div class="col-md-12" style="overflow-x: hidden;overflow-y: scroll;height:200px;">
                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Gaji Pokok</label>
                                <input type="text" id="resultPayroll" class="form-control col-md-6">
                            </div>
                        </div>
                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Management Fee</label>
                                <input type="text" id="feePayroll" class="form-control col-md-6">
                            </div>
                        </div>
                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Tunjangan Pajak</label>
                                <input type="text" id="taxPayroll" class="form-control col-md-6">
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Perlengkapan</label>
                                <input type="text" id="attributePayroll" class="form-control col-md-6">
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Potongan BPJS TK</label>
                                <input type="text" id="bpjsTkDeduction" class="form-control col-md-6">
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Potongan BPJS KS</label>
                                <input type="text" id="bpjsKesehatanDeduction" class="form-control col-md-6">
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Potongan Pensiun</label>
                                <input type="text" id="pensionDeduction" class="form-control col-md-6">
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Potongan Pajak PKP1</label>
                                <input type="text" id="pkp1" class="form-control col-md-6">
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">PPH 21</label>
                                <input type="text" id="pph21" class="form-control col-md-6">
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">PPH 23</label>
                                <input type="text" id="pph23" class="form-control col-md-6">
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="form-group row">
                                <label class="col-md-6">Potongan Lainnya</label>
                                <input type="text" id="anotherDeduction" class="form-control col-md-6">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 ">
                        <div class="form-group row">
                            <label class="col-md-4">Take Home Pay</label>
                            <input type="text" id="takeHomePay" class="form-control col-md-8">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-secondary">Kembali</button>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="downloadReportModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <h4>Download File</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-12">Pilih Distrik</label>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <select class="form-control select2modal" id="districtId" style="width:360px">
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="downloadReport()">Simpan</button>
                    <button type="button" data-dismiss="modal" class="btn btn-secondary">Kembali</button>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/js/payrollDetail/index.js"></script>
