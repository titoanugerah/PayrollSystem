@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/slip.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body onload="window.print()">

    <div class="container" style="width: 21cm; height: 14cm; padding: 2rem; margin: 0 auto;">
        <div class="row">
            <div class="col-md-1">
                <img src="~/img/logo.jpeg" alt="MBK" style="width:60px; height:60px" />
            </div>
            <div class="col-md-5">
                <b style="color:red;">PT. Mulia Bintang Kejora</b>
                <br />
                <p style="color:blue;">Melayani Berkarya Komitmen</p>


            </div>
            <div class="col-md-1">
                NIK
            </div>
            <div class="col-md-5">
                : @ViewBag.payrollDetail.Employee.NIK.ToString().PadLeft(4, '0')
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-5">
            </div>
            <div class="col-md-1">
                Nama
            </div>
            <div class="col-md-5">
                : @ViewBag.payrollDetail.Employee.Name
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-1">
                Lokasi
            </div>
            <div class="col-md-5">
                : @ViewBag.payrollDetail.Employee.Location.Name - @ViewBag.payrollDetail.Employee.Customer.Name
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-md-6">
                <center>
                    Pendapatan
                </center>
            </div>
            <div class="col-md-6">
                <center>
                    Potongan
                </center>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Gaji Pokok
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.MainSalaryBilling);
            </div>
            <div class="col-md-3">
                BPJS Ketenagakerjaan
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.BpjsTkDeduction);
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                Lembur
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.OvertimeBilling);
            </div>
            <div class="col-md-3">
                Jaminan Pensiun
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.PensionDeduction);
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Premi Hadir
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.AttendanceBilling);
            </div>
            <div class="col-md-3">
                PPH 21
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.PPH21);
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Insentif Lainnya
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.InsentiveBilling);
            </div>
            <div class="col-md-3">
                Potongan Lainnya
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.AnotherDeduction);
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Tunjangan Pulsa
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.AppreciationBilling);
            </div>
            <div class="col-md-3">
                Biaya Transfer
            </div>
            <div class="col-md-3">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.TransferFee);
            </div>
        </div>
