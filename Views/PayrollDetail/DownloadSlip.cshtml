            @*}
        }*@
        @*<div class="row">
            <div class="col-md-3">
                Rapel
            </div>
            <div class="col-md-9">
                : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.Rapel);
            </div>
        </div>*@
        <br />
        <div class="row">
            <div class="col-md-3">
                <b>Total Pendapatan</b>
            </div>
            <div class="col-md-3">
                <b>: @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", (@ViewBag.payrollDetail.MainSalaryBilling + @ViewBag.payrollDetail.OvertimeBilling + @ViewBag.payrollDetail.AttendanceBilling + @ViewBag.payrollDetail.InsentiveBilling + @ViewBag.payrollDetail.AppreciationBilling + @ViewBag.payrollDetail.Rapel))</b>
            </div>
            <div class="col-md-3">
                <b>Total Potongan</b>
            </div>
            <div class="col-md-3">
                <b>: @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", (@ViewBag.payrollDetail.BpjsTkDeduction + @ViewBag.payrollDetail.BpjsKesehatanDeduction + @ViewBag.payrollDetail.PensionDeduction + @ViewBag.payrollDetail.PPH21 + @ViewBag.payrollDetail.AnotherDeduction + @ViewBag.payrollDetail.TransferFee))</b>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-3">
                <b>Take Home Pay</b>
            </div>
            <div class="col-md-3">
                <b>
                    : @string.Format(new System.Globalization.CultureInfo("ID"), "{0:C}", @ViewBag.payrollDetail.TakeHomePay);
                </b>
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6" style="">
                Slip Gaji Periode : @ViewBag.payrollDetail.PayrollHistory.Month, @ViewBag.payrollDetail.PayrollHistory.Year
            </div>

        </div>

    </div>
